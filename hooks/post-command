#!/usr/bin/env bash
set -eo pipefail

if [ ${BUILDKITE_PLUGIN_BUILDKITE_TAG_RELEASE_RELEASE_COMPLETE} == 'true' ]
then 
    lib/tag-release.sh ${BUILDKITE_PLUGIN_BUILDKITE_TAG_RELEASE_CURRENT_TAG_NAME} ${BUILDKITE_PLUGIN_BUILDKITE_TAG_RELEASE_PENDING_TAG_NAME:-} ${BUILDKITE_PLUGIN_BUILDKITE_TAG_RELEASE_PREVIOUS_TAG_NAME:-}
fi
